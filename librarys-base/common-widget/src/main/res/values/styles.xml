<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HudStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="CustomEditLayout">
        <attr name="left_tag" format="string"/>
        <attr name="input_type" format="integer"/>
        <attr name="hint" format="string|reference"/>
        <attr name="max_length" format="integer"/>
        <attr name="unit" format="string|reference"/>
        <attr name="decimal_length" format="integer|reference"/>
        <attr name="input_by_left" format="boolean"/>
        <attr name="etPadding" format="integer|reference"/>
    </declare-styleable>

</resources>