<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StateLayout">
        <attr name="loading_layout" format="reference" />
        <attr name="empty_layout" format="reference" />
        <attr name="error_layout" format="reference" />
        <attr name="error_img" format="reference" />
        <attr name="error_text" format="reference|string" />
        <attr name="empty_img" format="reference" />
        <attr name="empty_text" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="RefreshLoaderView">
        <attr name="dividerColor" format="color|reference" />
        <attr name="dividerHeight" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="imageLoader" format="string|reference" />
        <attr name="mainTitle" format="string|reference" />
        <attr name="showBack" format="boolean|reference" />
        <attr name="rightText" format="string|reference" />
        <attr name="rightDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="TabIndicator">
        <attr name="tabTextArr" format="reference" />
        <attr name="tabSelectColor" format="color" />
        <attr name="tabUnSelectColor" format="color" />
        <attr name="tabSelectImageArr" format="reference" />
        <attr name="tabUnSelectImageArr" format="reference" />
        <attr name="tabTextSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color" />
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension" />
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension" />
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color" />
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean" />
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UploadImagesAreaView">
        <attr name="imageResArr" format="reference" />
        <attr name="imageNameArr" format="reference" />
        <attr name="showAdd" format="boolean" />
        <attr name="showAddInTail" format="boolean" />
        <attr name="noCheck" format="string|reference" />
        <attr name="columnNum" format="integer" />
        <attr name="maxNum" format="integer" />
        <attr name="explainText" format="string|reference" />
        <attr name="radio" format="float" />
        <attr name="footerImg" format="reference" />
        <attr name="headContent" format="string|reference" />
        <attr name="handler" format="string" />
        <attr name="namespace" format="string" />
        <attr name="toastHint" format="string" />
    </declare-styleable>

    <declare-styleable name="CellView">
        <attr name="edit_mode" format="boolean" />
        <attr name="label" format="string|reference" />
        <attr name="value" format="string|reference" />
        <attr name="placeholder" format="string|reference" />
        <attr name="unit" format="string|reference" />
        <attr name="input_type" format="integer" />
        <attr name="max_length" format="integer" />
        <attr name="decimal_length" format="integer" />
    </declare-styleable>

</resources>