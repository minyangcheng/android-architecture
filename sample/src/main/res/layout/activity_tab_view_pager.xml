<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.min.common.widget.tab.TabViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.min.common.widget.tab.TabViewPagerIndicator
        android:id="@+id/ti_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cccccc"
        app:tabTextArr="@array/tabTextArr"
        app:tabSelectImageArr="@array/tabSelectImageArr"
        app:tabUnSelectImageArr="@array/tabUnSelectImageArr"
        app:tabTextSize="10sp">
    </com.min.common.widget.tab.TabViewPagerIndicator>

</LinearLayout>
